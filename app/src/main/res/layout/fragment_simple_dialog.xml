<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_simple_dialog"
    android:minWidth="280dp"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tvAntsDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        android:textColor="#E6000000"
        android:textSize="18sp"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/svAntsDialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="68dp"
        >

        <TextView
            android:id="@+id/tvAntsDialogContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="25dp"
            android:textColor="#E6000000"
            android:textSize="18sp"/>
    </ScrollView>

    <ImageView
        android:id="@+id/ivVerticalLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:src="#33000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAntsDialogLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_simple_dialog_left"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/btn_simple_dialog_left"
            />

        <ImageView
            android:id="@+id/lineAntsDialog"
            android:layout_width="1px"
            android:layout_height="14dp"
            android:src="#33000000"/>

        <Button
            android:id="@+id/btnAntsDialogRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_simple_dialog_right"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="@color/btn_simple_dialog_right"
            />
    </LinearLayout>

</LinearLayout>